{
    "src_folders" : ["tests", "tests/utils"],
    "output_folder" : "reports",
    "custom_commands_path" : "",
    "custom_assertions_path" : "",
    "page_objects_path" : "pages",
    "globals_path" : "globals.js",
    "webdriver": {
      "start_process" : true,
      "server_path": "libraries/drivers/chromedriver.exe",
      "cli_args": [
        "--log", "debug"
      ],
      "port": 4444
    },
    "selenium" : {
      "start_process" : true,
      "server_path" : "libraries/selenium/selenium-server-standalone-3.141.59.jar",
      "log_path" : "logs/",
      "host" : "127.0.0.1",
      "port" : 4444,
      "cli_args" : {
        "webdriver.chrome.driver" : "libraries/drivers/chromedriver.exe"
      }
    },
    "test_settings" : {
      "default" : {
        "skip_testcases_on_fail": false,
        "launch_url" : "http://127.0.0.1:8000/",
        "selenium_port"  : 4444,
        "selenium_host"  : "localhost",
        "silent": true,
        "use_xpath":true,
        "screenshots" : {
          "enabled" : false,
          "path" : "screenshorts/"
        },
      "globals": {
        "waitForConditionTimeout": 5000 
      },
        "desiredCapabilities": {
          "browserName": "firefox",
          "javascriptEnabled": true,
          "acceptSslCerts": true
        }
      },
   
      "chrome" : {
        "desiredCapabilities": {
          "browserName": "chrome",
          "javascriptEnabled": true,
          "acceptSslCerts": true,
          "chromeOptions": {
            "args": [
              "disable-web-security",
             "ignore-certificate-errors",
             "--test-type"
            ]
          }
        }
      }
    }
  }